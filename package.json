{
  "name": "@blockful/external-resolver",
  "version": "1.0.0",
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ccip-server": "yarn workspace @blockful/ccip-server",
    "client": "yarn workspace @blockful/client",
    "gateway": "yarn workspace @blockful/gateway",
    "contracts": "yarn workspace @blockful/contracts",
    "start": "dotenvx run -- turbo run start",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "build": "turbo run build",
    "prepare": "husky",
    "lint": "turbo run lint"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^0.20.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.0.3",
    "@rocketseat/eslint-config": "^2.2.2",
    "@types/eslint": "^8",
    "@types/node": "^20.11.25",
    "commitlint": "^19.0.3",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^1.12.4"
  }
}
