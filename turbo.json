{
  "$schema": "https://turbo.build/v1/schema.json",
  "globalDotEnv": [
    ".env"
  ],
  "pipeline": {
    "start": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "@blockful/client#test": {
      "dependsOn": [
        "@blockful/contracts#build",
        "@blockful/gateway#build"
      ]
    },
    "test:watch": {},
    "lint": {},
    "@blockful/gateway#build": {
      "dependsOn": [
        "@blockful/ccip-server#build"
      ]
    },
    "@blockful/gateway#test": {
      "dependsOn": [
        "@blockful/ccip-server#build"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/"
      ]
    }
  }
}