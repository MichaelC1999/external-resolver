{
  "name": "@blockful/gateway",
  "version": "1.0.0",
  "description": "",
  "main": "src/database.ts",
  "types": "src/database.ts",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "start:db": "node ./dist/database.js",
    "start:eth": "node ./dist/ethereum.js",
    "start:arb": "node ./dist/arbitrum.js",
    "start:metadata": "node ./dist/metadata.js",
    "dev:db": "ENV_FILE=../../.env ts-node ./cmd/database.ts --watch",
    "dev:eth": "ENV_FILE=../../.env ts-node ./cmd/ethereum.ts --watch",
    "dev:arb": "ENV_FILE=../../.env ts-node ./cmd/arbitrum.ts --watch",
    "dev:metadata": "ENV_FILE=../../.env ts-node ./cmd/metadata.ts --watch",
    "lint": "eslint . --ext .ts --fix",
    "build": "tsup-node",
    "typeorm": "ts-node -r tsconfig-paths/register --project ./tsconfig.json ../../node_modules/typeorm/cli -d ./src/datasources/migration.config.ts",
    "migration:create": "ENV_FILE=../../.env cross-var npm run typeorm -- migration:create ./src/datasources/migrations/$npm_config_name",
    "migration:generate": "ENV_FILE=../../.env cross-var npm run typeorm -- migration:generate ./src/datasources/migrations/$npm_config_name",
    "migration:up": "ENV_FILE=../../.env npm run typeorm -- migration:run",
    "migration:down": "ENV_FILE=../../.env npm run typeorm -- migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@blockful/tsconfig": "*",
    "@swc/core": "^1.6.13",
    "@types/express": "^4.17.21",
    "@types/express-mung": "^0.5.5",
    "@types/node": "^20.14.10",
    "@types/pg": "^8",
    "@types/supertest": "^6.0.2",
    "better-sqlite3": "^9.4.3",
    "cross-var": "^1.1.0",
    "nodemon": "^3.1.4",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.1.0",
    "typeorm-ts-node-esm": "^0.3.20",
    "typescript": "^5.5.3",
    "unplugin-swc": "^1.5.1",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@blockful/ccip-server": "*",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-mung": "^0.5.1",
    "graphql": "^16.9.0",
    "graphql-scalars": "^1.23.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "viem": "^2.17.4",
    "winston": "^3.13.1"
  }
}
