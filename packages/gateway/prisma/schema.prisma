generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Domain {
  namehash    String    @id @map("_id")
  contenthash String?
  addresses   Address[]
  texts       Text[]
}

model Address {
  coin       Int    @id @default(60) @map("_id")
  address    String
  domainHash String
  domain     Domain @relation(fields: [domainHash], references: [namehash])
}

model Text {
  key        String @id @map("_id")
  value      String
  domainHash String
  domain     Domain @relation(fields: [domainHash], references: [namehash])
}
