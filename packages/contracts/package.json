{
  "name": "@blockful/contracts",
  "packageManager": "yarn@4.1.0",
  "scripts": {
    "test": "forge test -vvv",
    "test:watch": "forge test -vvv --watch",
    "start:l1": "anvil & forge script script/local/PublicResolver.s.sol --rpc-url ${RPC_URL} --broadcast -vv",
    "start:db": "anvil & forge script script/local/DatabaseResolver.s.sol --rpc-url ${RPC_URL} --broadcast -vv",
    "start:arb": "anvil & forge script script/local/OffchainResolver.s.sol --rpc-url ${RPC_URL} --broadcast -vv",
    "postinstall": "forge install",
    "lint": "solhint src/**/*.sol --fix",
    "build": "forge build"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "solhint": "^4.1.1"
  }
}